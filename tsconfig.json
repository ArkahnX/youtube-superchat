{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"moduleResolution": "node",
		"outDir": "build",
		"resolveJsonModule": true,

		"lib": ["ESNext", "dom", "scripthost"],
		"allowJs": false,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true
	},
	"paths": {
		"~*": ["./*"]
	},
	"typeRoots": [
		"./node_modules/phaser/types"
	],
	"types": [
		"Phaser"
	],
	"include": ["src/**/*", "types/*"]
}
